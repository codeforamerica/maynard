<p id="notice"><%= notice %></p>

<h1><%= @project.name %> (<%= @project.project_number %>)</h1>

<hr />

<div class="row">
  <div class="col-md-4 col-md-offset-8">
    <%= link_to "I'm interested!", "#", class: "btn btn-primary" %>
    <%= link_to "Ask a new question", new_project_question_path(@project), class: "btn btn-success" %>
  </div>
</div><br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Question</th>
      <th style="text-align: center;">Responses</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.body %></td>
        <td style="text-align: center;"><%= link_to(question.answers.size, project_questions_url(@project)) %></td>
        <td><%= link_to 'Remove', [@project, question], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit this project', edit_project_path(@project) %> |
<%= link_to 'All projects', projects_path %>
