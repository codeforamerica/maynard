<div class="jumbotron">
  <div class="container">
    <h1>Planholders <small><%= pluralize(@planholders.size, "planholder") %></h1>
    <br />
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email address</th>
      <th style="text-align: center;">Company</th>
      <th style="text-align: center;">Added</th>
    </tr>
  </thead>

  <tbody>
    <% @planholders.each do |planholder| %>
      <tr>
        <td><%= planholder.first_name %></td>
        <td><%= planholder.last_name %></td>
        <td><%= planholder.email %></td>
        <td style="text-align: center;"><%= planholder.name %></td>
        <td style="text-align: center;"><%= planholder.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Download planholder list (Excel)", project_planholders_path(@project, format: :xlsx) %>

<br>
