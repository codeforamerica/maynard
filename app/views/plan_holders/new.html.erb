<style type="text/css">
  .bs-callout {
    margin: 20px 0;
    padding: 20px;
    border-left: 3px solid #eee;
  }

  .bs-callout-info {
    background-color: #f4f8fa;
    border-color: #5bc0de;
  }

  .bs-callout-danger {
    background-color: #fdf7f7;
    border-color: #d9534f;
  }
</style>

<div class="row">
  <div class="col-md-8">
    <div class="page-header">
      <h1>Get bid updates automatically by joining the planholder's list!</h1>
    </div>
    <p>
      You no longer need to email a contracting officer to get on the planholder's list
      or wait on an email updates from contracting officers for contracts you're interested in!
      <strong>What happens when you add your email address below?</strong>
      <ul>
        <li>Immediately download the most up-to-date bidder's package for active opportunities</li>
        <li>Save time by not needing to email contracting officers to express interest in bidding</li>
        <li>Be in the know from addenda being automatically sent to your inbox</li>
      </ul>
    </p>
  </div>
</div><br />

<%= form_for @planholder, html: { role: 'form' } do |f| %>
  <% if @planholder.errors.any? %>
    <div class="row">
      <div class="col-md-8">
        <div class="bs-callout bs-callout-danger">
          <h3>Sorry, <%= pluralize(@planholder.errors.count, "error") %> are keeping you from being added to the planholder's list:</h3>
          <ul>
            <% @planholder.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div><br />
  <% end %>
  <script type="text/javascript">
    jQuery(function($) {
      $('#plan_holder_project_id').change(function() {
        var jqxhr = $.post("<%= ui_update_plan_holders_url %>", $('#new_plan_holder').serialize())
        .success(function(data) {
          var project = data;
          $('#project-info-well').fadeIn();
          $('#project-info-project-number').html(project.project_number);
          $('#project-info-project-name').html(project.name);
        })
        .error(function(data) { console.log("Not good."); });
      });
    });
  </script>
  <div class="form-group">
    <div class="row">
      <div class="col-md-8">
        <%= f.label "Select a bid opportunity" %><br />
        <%= f.select(:project_id, Project.order('project_number ASC').pluck(:id, :name, :project_number).collect { |p| ["#{ p[2] } - #{ truncate(p[1], length: 30) }", p[0]] }, {}, { class: "form-control input-lg" }) %>
      </div>
    </div><br />
    <div class="row" id="project-info-well" style="display: none;">
      <div class="col-md-8">
        <div class="well">
          You chose <strong id="project-info-project-number"></strong> - <strong id="project-info-project-name"></strong>.
        </div>
      </div>
    </div>
  </div><br />

  <div class="form-group">
    <%= f.fields_for :user, @planholder.user do |p| %>
      <div class="row">
        <div class="col-sm-4">
          <%= f.label "What's your first name?" %>
          <%= p.text_field :first_name, class: "form-control input-lg col-sm-4", placeholder: "Jane" %>
        </div>
        <div class="col-sm-4">
          <%= f.label "What's your last name?" %>
          <%= p.text_field :last_name, class: "form-control input-lg", placeholder: "Doe" %>
        </div>
      </div><br />

      <div class="row">
        <div class="col-md-8">
          <%= p.label "What's your email address?" %>
          <%= p.text_field :email, class: "form-control input-lg", placeholder: "janedoe@excellent-vendor.com" %>
          <span class="help-block">Be sure to use an email address that you check often to ensure you receive all updates.</span>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.fields_for :company, @planholder.company do |c| %>
          <%= c.label "Finally, what's the name of your company?" %><br />
          <%= c.text_field :name, class: "form-control input-lg", placeholder: "ACME Widgets, Inc." %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <%= f.submit "Download the bidder's package & receive updates!", class: "btn-success btn" %>
      </div>
    </div>
  </div>
<% end %>
